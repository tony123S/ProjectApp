<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".foods_details">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="14dp">

            <TextView
                android:id="@+id/tv_foods_details"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Foods Details"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="30dp"
                android:textAlignment="center"
                android:background="@color/colorPrimary"/>

            <ImageView
                android:id="@+id/img_nutrition_importance"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:layout_margin="10dp"
                android:src="@drawable/aritcle_details"
                android:background="@drawable/rec"
                android:padding="14dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:padding="4dp"
                    android:textSize="30dp"
                    android:text="Age Group"
                    android:textAlignment="center"
                    android:background=" #a4c639"/>
                <TextView
                    android:id="@+id/tv_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:padding="4dp"
                    android:textSize="25dp"
                    android:background="#a4c639"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:padding="4dp"
                    android:textSize="30dp"
                    android:text="Gender Categories"
                    android:textAlignment="center"
                    android:background=" #a4c639"/>
                <TextView
                    android:id="@+id/tv_gender_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:padding="4dp"
                    android:textSize="25dp"
                    android:background=" #a4c639"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="14dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:padding="4dp"
                    android:textSize="30dp"
                    android:text="Foods you should Eat"
                    android:textAlignment="center"
                    android:background=" #a4c639" />
                <TextView
                    android:id="@+id/tv_food"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:padding="4dp"
                    android:textSize="25dp"
                    android:background=" #a4c639" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>